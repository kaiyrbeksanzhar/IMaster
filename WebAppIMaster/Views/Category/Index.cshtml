@model List<WebAppIMaster.Models.NewManagerModels.CategoryModels.CategorySelect>
@using WebAppIMaster.Resources
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #example_wrapper{
        padding:5px;
    }
</style>

<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title">Категория</h4>
        <p class="card-category">Страница добавление категорий</p>
    </div>
    <div class="card-body table-full-width table-responsive">
        <p>
            <a  href="/Category/Create" class="btn btn-info btn-fill pull-left">Добавить</a>
        </p>

        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Приоритет
                    </th>
                    <th>
                        Количество специализации
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Specilization/Index?categoryId=@item.Id">
                                @item.Name
                            </a>
                        </td>
                        <td>
                            @item.Priority
                        </td>
                        <td>
                            @item.SpecializationCount
                        </td>
                        <td>
                            @Html.ActionLink(Resource.Edit, "Edit", new { id = item.Id }) |
                            @Html.ActionLink(Resource.Delete, "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Приоритет
                    </th>
                    <th>
                        Количество специализации
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

