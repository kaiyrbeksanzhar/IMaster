@model List<WebAppIMaster.Models.NewManagerModels.CategoryMarketVmMdl>
@using WebAppIMaster.Resources
@{
    ViewBag.Title = "IndexCategoryMarket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #example_wrapper {
        padding: 5px;
    }
</style>

<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title">Категории маркет</h4>
        <p class="card-category">Страница добавление категорий маркета</p>
    </div>
    <div class="card-body table-full-width table-responsive">
        <p>
            <a href="/Organization/CreateCategoryMarket" class="btn btn-info btn-fill pull-left">Добавить</a>
        </p>
        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        связь
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CategoryMarketName
                        </td>
                        <td>
                            @foreach (var category in item.CatgoryNames)
                            {
                                @category.Name
                            }
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        связь
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
