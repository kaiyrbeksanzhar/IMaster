@model IEnumerable<WebAppIMaster.Models.NewManagerModels.IndexOrganizationPrice>

@{
    ViewBag.Title = "IndexOrganizationPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список Цен Организацы @ViewBag.Org.Name</h2>

<p>
    <a href="/Organization/CreateOrganizationPrice?organizationId=@ViewBag.Org.OrganizationId" class="btn btn-info btn-fill pull-left">Добавить</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrganizationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
    </tr>
}

</table>
