@model WebAppIMaster.Models.NewManagerModels.NewsCreateMdl
@using WebAppIMaster.Resources;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title">Добавление категории</h4>
        <p class="card-category">Страница добавление категорий</p>
    </div>
    <div class="card-body table-full-width table-responsive">

        @using (Html.BeginForm("Create", "News", FormMethod.Post,
                                            new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Заголовок на казахском</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title_kz, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title_kz, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Заголовок на русском</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title_ru, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title_ru, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-3">Выберите изображение</label>
                    <div class="col-md-9" style="padding-top:10px;">
                        <input type="file" name="Photo" id="Photo">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">Выберите изображение на казахском</label>
                    <div class="col-md-9" style="padding-top:10px;">
                        <input type="file" name="Photo_kz" id="Photo_kz">
                    </div>
                </div>
                <style>
                    .col-md-9 > select {
                        height: 30px !important;
                    }
                </style>
                <div class="form-group">
                    <label class="control-label col-md-3">Выберите</label>
                    <div class="col-md-9" style="padding-top:10px;">
                        @Html.EnumDropDownListFor(
                                    x => x.TypeRoles,
                                    "Выберите",
                                    new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ShortText_kz, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ShortText_kz, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShortText_kz, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description_kz, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description_kz,  new { @class = "form-control", @cols = 80 ,@rows=10 })
                        @Html.ValidationMessageFor(model => model.Description_kz, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShortText_ru, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ShortText_ru, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShortText_ru, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description_ru, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description_ru, new { @class = "form-control", @cols = 80, @rows = 10 })
                        @Html.ValidationMessageFor(model => model.Description_ru, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="@Resource.Create" class="btn btn-info btn-fill" />
                    </div>
                    <div class="col-md-12" style="padding-left:15px;">
                        <a href="/Category/Index" class="" style="font-size:14px;">Назад</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
