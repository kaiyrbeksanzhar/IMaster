@model IPagedList<WebAppIMaster.Models.NewManagerModels.NewsVmMdl>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #example_wrapper {
        padding: 5px;
    }
</style>

<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title">Новости</h4>
        <p class="card-category">Страница новости</p>
    </div>
    <div class="card-body table-full-width table-responsive">
        <p>
            <a href="/News/Create" class="btn btn-info btn-fill pull-left">Добавить</a>
        </p>

        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Приоритет
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @if (item.TypeRoles == WebAppIMaster.Models.Enums.Roles.Customer)
                            {
                                <p>
                                    Клиент
                                </p>
                            }
                            else
                            {
                                <p>
                                    Испольнитель
                                </p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Приоритет
                    </th>
                    <th>
                        Количество специализации
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber }))
