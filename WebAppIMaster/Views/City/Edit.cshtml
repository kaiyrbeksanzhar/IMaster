@model WebAppIMaster.Models.NewManagerModels.CityEditMdl
@using WebAppIMaster.Resources
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resource.Edit </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>@Resource.CityEditMdl</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)



        <div class="md-form input-group">
            <div class="input-group-prepend">
                <span class="input-group-text md-addon">@Resource.Name_kz</span>
            </div>
            @Html.EditorFor(model => model.Name_kz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name_kz, "", new { @class = "text-danger" })
        </div>


        <div class="md-form input-group">
            <div class="input-group-prepend">
                <span class="input-group-text md-addon">@Resource.Name_ru</span>
            </div>
            @Html.EditorFor(model => model.Namr_ru, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Namr_ru, "", new { @class = "text-danger" })
        </div>


        <div class="md-form input-group">
            <div class="input-group-prepend">
                <span class="input-group-text md-addon">
                    @Resource.Latitude
                </span>
            </div>
            @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Latitude, "", new { @class = "text-danger" })
        </div>



        <div class="md-form input-group">
            <div class="input-group-prepend">
                <span class="input-group-text md-addon">
                    @Resource.Longitude
                </span>
            </div>
            @Html.EditorFor(model => model.Longitudey, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Longitudey, "", new { @class = "text-danger" })
        </div>


        <div class="md-form input-group">
            <div class="input-group-prepend">
                <span class="input-group-text md-addon">
                    @Resource.Priority
                </span>
            </div>
            @Html.EditorFor(model => model.Preority, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Preority, "", new { @class = "text-danger" })
        </div>



    </div>
    <br />
    <div class="form-group row" style="float:left;">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" value="@Resource.Save" class="btn btn-default" /> 
        </div>
        <div class="col-md-4 text-center">
            @Html.ActionLink(Resource.BacktoList, "Index")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
