@model WebAppIMaster.Models.NewManagerModels.HowDidYouAboutUsEdit
@using WebAppIMaster.Resources;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card strpied-tabled-with-hover">
        <div class="card-header ">
            <h2>Редактировать источника</h2>
        </div>
        <div class="card-body table-full-width table-responsive">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)


                    <div class="form-group">
                        <label class="control-label col-md-2" for="SourceName_ru">Название источника на русском</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SourceName_ru, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SourceName_ru, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="SourceName_ru">Название источника на казахском</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SourceName_kz, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SourceName_kz, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <label class="control-label col-md-2" for="SourceName_ru">Приоритет</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group ml-5">
                        <div class="d-inline">
                            <a href="/HowDidYouAboutUs/IndexMain" class="btn btn-info btn-fill">Назад</a>
                        </div>
                        <div class="d-inline m-3">
                            <input id="btnSubmit" type="submit" value="@Resource.Create" class="btn btn-info btn-fill" />
                        </div>
                    </div>
                </div>
            }


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
            </div>
</div>