@model IEnumerable<WebAppIMaster.Models.NewManagerModels.SupportVmMdl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #example_wrapper {
        padding: 5px;
    }
</style>

<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title">Сообщения в службе поддержки</h4>
        <p class="card-category">Сообщения в службе поддержки</p>
    </div>
    <div class="card-body table-full-width table-responsive">
        <table id="example" class="display table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ФИО
                    </th>
                    <th>
                        Город
                    </th>
                    <th>
                        Тип сообщение
                    </th>
                    <th>
                        Номер
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Support/Details?id=@item.Id">
                                @item.FIO
                            </a>
                        </td>
                        <td>
                            @item.CityName
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                    </tr>
                }
            </tbody>
            @*<tfoot>
                <tr>
                    <th>
                        ФИО
                    </th>
                    <th>
                        Город
                    </th>
                    <th>
                        Тип сообщение
                    </th>
                    <th>
                        Номер
                    </th>
                </tr>
            </tfoot>*@
        </table>
    </div>
</div>
