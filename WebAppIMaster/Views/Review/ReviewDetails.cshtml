@model WebAppIMaster.Models.NewManagerModels.ReviewModel.ReviewDetail
@using WebAppIMaster.Resources
@{
    ViewBag.Title = "Index";
    int i;
    int k = Model.Rating;
    int o = 5 - Model.Rating;
}


<style>
    #example_wrapper {
        padding: 5px;
    }
</style>

<div class="card strpied-tabled-with-hover">
    <div class="card-header ">
        <h4 class="card-title">Отзыв</h4>
    </div>
    <div class="card-body table-full-width table-responsive">
        <h4>Исполнитель: @Model.Executor</h4>
        <h4>Оставил отзыв: @Model.Customer</h4>

        <p>Оценка</p>
        <p>
            @for (i = 1; i <= k; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @for (i = 0; i <= o; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </p>
        <hr />
        <p>Отзыв</p>
        <p>rere ergrdgdfgsdf dfgdfgdfg dfgdfg | @Model.ReviewText | ---</p>
        <br />
        <a href="/Review/Index" class="btn btn-info btn-fill pull-left">Назад</a>
    </div>
</div>